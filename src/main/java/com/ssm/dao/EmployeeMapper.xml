<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.dao.EmployeeMapper">
    <resultMap id="EmployeeMap" type="Employee">
        <id property="empId" column="emp_id"/>
        <result property="empName" column="emp_name"/>
        <result property="gender" column="gender"/>
        <result property="email" column="email"/>
        <result property="dId" column="d_id"/>
    </resultMap>

    <resultMap id="EmpAndDept" type="Employee">
        <id property="empId" column="emp_id"/>
        <result property="empName" column="emp_name"/>
        <result property="gender" column="gender"/>
        <result property="email" column="email"/>
        <result property="dId" column="d_id"/>
        <association property="dept" javaType="Dept">
            <id property="deptId" column="dept_id"/>
            <result property="deptName" column="dept_name"/>
        </association>
    </resultMap>
    
    <sql id="listEmployee">
        select
              emp_id,
              emp_name,
              gender,
              email,
              d_id,
              dept_id,
              dept_name
              from emp
              inner join dept
              on d_id = dept_id
    </sql>
    <!-- 删除员工信息 -->
    <delete id="delEmployee">
        delete from emp
               where emp_id = #{empId}
    </delete>
    <!-- 修改员工信息 -->
    <update id="updateEmployee" parameterType="Employee">
        update
              emp
              <set>
                  <if test="empName != null and empName != '' ">
                        emp_name = #{empName},
                  </if>
                  <if test="gender != null and gender != '' ">
                        gender = #{gender},
                  </if>
                  <if test="email != null and email != '' ">
                        email = #{email},
                  </if>
                  <if test="dId != null and dId != '' ">
                      d_id = #{dId}
                  </if>
              </set>
              where emp_id = #{empId}
    </update>

    <!-- 查看用户名或邮箱是否存在 -->
    <select id="checkUserOrEmail" resultType="int">
        select
              count(0)
              from emp
              <where>
                  <if test="empName != '' and empName != null">
                      emp_name = #{empName}
                  </if>
                  <if test="email != '' and email != null">
                      and email = #{email}
                  </if>
              </where>
    </select>
    <!-- 列出所有的员工 -->
    <select id="listEmp" resultMap="EmpAndDept">
        <include refid="listEmployee"/>
    </select>
    <!-- 通过员工 id 来获取用户信息 -->
    <select id="getEmployeeById" resultMap="EmpAndDept">
        <include refid="listEmployee"/>
        where emp_id=#{id}
    </select>
    <!-- 新增员工 -->
    <insert id="saveEmployee" parameterType="Employee">
        insert into emp (emp_name, gender, email, d_id) values (#{empName}, #{gender}, #{email}, #{dId})
    </insert>
</mapper>